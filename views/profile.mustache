{{> header}}

<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <img src="{{user.profile_picture}}" class="img-fluid rounded" alt="Photo de {{user.name}}">
        </div>
        <div class="col-md-8">
          <h2>{{user.name}}</h2>
          <p><strong>Email :</strong> {{user.email}}</p>
          <p><strong>Téléphone :</strong> {{user.phone}}</p>
          <p><strong>Localisation :</strong> {{user.location}}</p>
          <p><strong>Rôle :</strong> {{user.role}}</p>
          <hr>
          <p>{{user.bio}}</p>
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}
