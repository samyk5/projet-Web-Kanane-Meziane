<h2>Demandes reçues</h2>

{{#requests.length}}
<table>
    <tr>
        <th>Annonce</th>
        <th>Bénéficiaire</th>
        <th>Statut</th>
        <th>Action</th>
    </tr>
    {{#requests}}
    <tr>
        <td>{{title}}</td>
        <td>{{requester_name}}</td>
        <td>{{status}}</td>
        <td>
            {{#isPending}}
            <form action="/requests/respond" method="POST">
                <input type="hidden" name="request_id" value="{{id}}">
                <button type="submit" name="status" value="accepté">✅ Accepter</button>
                <button type="submit" name="status" value="refusé">❌ Refuser</button>
            </form>
            {{/isPending}}
        </td>
    </tr>
    {{/requests}}
</table>
{{/requests.length}}

{{^requests.length}}
<p>Aucune demande reçue.</p>
{{/requests.length}}
