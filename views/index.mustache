{{> header}}

<div class="container">
  <h2>Annonces disponibles</h2>
  
  <!-- Afficher le bouton 'Ajouter une annonce' si l'utilisateur est un donateur -->
  {{#user}}
    {{#isDonator}}
      <a href="/offers/new" class="btn btn-success mb-4">Publier une nouvelle offre</a>
    {{/isDonator}}
  {{/user}}
  
  <div class="row">
    {{#offers}}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="{{img_url}}" class="card-img-top" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text"><strong>Quantit√© : {{quantity}}</strong></p>
            <p class="card-text"><strong>Date limite : {{expiration_date}}</strong></p>
            <form action="/requests/create" method="POST">
              <input type="hidden" name="offer_id" value="{{id}}">
              <button type="submit" class="btn btn-primary">Faire une demande</button>
            </form>
          </div>
        </div>
      </div>
    {{/offers}}
  </div>
</div>

{{> footer}}
