<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="auth-card shadow">
        <div class="auth-card-header">
          <h2 class="auth-title">
            <i class="bi bi-envelope-arrow-up me-2"></i>Mot de passe oublié
          </h2>
        </div>

        <div class="auth-card-body">
          {{#error}}
          <div class="alert alert-danger d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>{{error}}</div>
          </div>
          {{/error}}

          {{#success}}
          <div class="alert alert-success d-flex align-items-center mb-4">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>{{success}}</div>
          </div>
          {{/success}}

          <form action="/auth/forgot-password" method="POST">
            <div class="mb-4 input-icon">
              <i class="bi bi-envelope"></i>
              <label for="email" class="form-label">Adresse email</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-auth py-2 mb-3">
              <i class="bi bi-send me-2"></i>Envoyer le lien de réinitialisation
            </button>

            <div class="auth-footer">
              <p class="m-0">Vous souvenez de votre mot de passe ? <a href="/auth/login" class="auth-link">Connexion</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
