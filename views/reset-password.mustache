<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="auth-card shadow">
        <div class="auth-card-header">
          <h2 class="auth-title">
            <i class="bi bi-key me-2"></i>Réinitialisation du mot de passe
          </h2>
        </div>

        <div class="auth-card-body">
          {{#error}}
          <div class="alert alert-danger d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>{{error}}</div>
          </div>
          {{/error}}

          <form action="/auth/reset-password" method="POST">
            <input type="hidden" name="token" value="{{token}}">

            <div class="mb-4 input-icon">
              <i class="bi bi-lock"></i>
              <label for="password" class="form-label">Nouveau mot de passe</label>
              <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-auth py-2 mb-3">
              <i class="bi bi-arrow-repeat me-2"></i>Réinitialiser mon mot de passe
            </button>

            <div class="auth-footer">
              <p class="m-0">Revenir à la <a href="/auth/login" class="auth-link">connexion</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
